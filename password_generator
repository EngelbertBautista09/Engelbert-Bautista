<h2>Password Generator</h2>

<form action="">
  <label for="email">Email:</label><br>
  <input type="email" id="email" name="email"><br>
  <label for="password">Password:</label><br>
  <input type="text" id="password" name="password" readonly><br><br>
  <input type="button" value="Generate Password" onclick="generatePassword()">
</form>

<script>
function generatePassword() {
    const value = "acbdefghijklmnopqrstuvwxyzABCDEGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()";
    const len = 16;
    let password = "";
    for (let i = 0; i < len; i++) {
        const randomNumber = Math.floor(Math.random() * value.length);
        password += value.charAt(randomNumber);
    }
    document.getElementById('password').value = password;
}
</script>

